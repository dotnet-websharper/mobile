  <App xmlns=""
       ProductID="{$guid1$}"
       Title="$projectname$"
       RuntimeType="Silverlight"
       Version="1.0.0.0"
       Genre="apps.normal"
       Author="$username$"
       Description=""
       Publisher="$userdomain$">
